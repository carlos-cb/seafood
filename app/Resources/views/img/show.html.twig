{% extends 'base.html.twig' %}

{% block body %}
    <h1>Img</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ img.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ img.name }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ img.foto }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ img.url }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('img_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('img_edit', { 'id': img.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
